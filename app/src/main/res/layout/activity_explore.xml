<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/base_layout_margin"
    android:orientation="vertical"
    tools:context=".control.ExploreActivity">

    <TextView
        android:id="@+id/explore_title_text_view"
        style="@style/highlight_title_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore_page_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/explore_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/explore_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>