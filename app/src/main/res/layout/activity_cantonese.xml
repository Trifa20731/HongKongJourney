<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/base_layout_margin"
    android:orientation="vertical"
    tools:context=".control.CantoneseActivity">

    <TextView
        android:id="@+id/cantonese_page_title_text_view"
        style="@style/highlight_title_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/useful_cantonese_page_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cantoenese_page_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/inner_item_padding" />

</LinearLayout>